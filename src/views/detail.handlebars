<main class="flex-grow-1 m-auto w-100 d-flex flex-column">
    <section id="productDetail" class="flex-grow-1 d-flex flex-column justify-content-evenly align-items-center mb-4">
        <article class="d-flex flex-column justify-content-center align-items-center">
            <h2 class="subtitle mt-4 mb-2 text-center productTitle">{{product.title}}</h2>
            <img src="{{product.photo}}" style="width: 300px; height: auto" id="productPhoto" class="object-fit-cover"
                alt="{{product.title}}" />
            <h5 class="p-2 text-center card-title"><span class="productDetails">Price</span>: {{product.price}}</h5>
            <h5 class="p-1 text-center card-title"><span class="productDetails">Stock</span>: {{product.stock}}</h5>
            {{#if (equals user.role "user")}}
            <input id="{{product._id}}" class="addToCart addtocartButton" type="button" value="Add to cart!">
            {{/if}}
            {{#if (equals user.role "admin")}}
            <a href="/products/update/{{product._id}}"><input id="{{product._id}}" class="update addtocartButton"
                    type="button" value="Update info"></a>
            <input id="{{product._id}}" class="delete deleteProdButton" type="button" value="Delete product">
            {{/if}}
        </article>
    </section>
</main>
<script src="/scripts/addToCart.js"></script>
<script src="/scripts/delete.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>