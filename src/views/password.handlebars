<main>
    <div class="container h-100">
        <div class="row h-100 justify-content-center align-items-center">
            <h4 class="pt-5 text-center text-decoration-underline">Reset password</h4>
            <fieldset class="mb-3 text-left w-50">
                <label for="email" class="form-label">Email</label><br>
                <input type="email" class="form-control  mb-70" id="email" required placeholder="Please type your email">
            </fieldset>
            <p class="text-center">We will send you an email to reset your password.</p>
            <div class="btn-group gap-2 col-4 mx-auto buttons align-middle" role="group" aria-label="Basic example">
                <button type="button" class="btn btn-primary btn-sm button" id="resetPassword">Submit</button>
                <p class="mt-2">or <a href="http://localhost:8080/" role="button">Cancel</a></p>
            </div>
        </div>
    </div>
</main>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="/scripts/password.js"></script>